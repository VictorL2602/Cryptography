{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "clang",
            "args": [
                "-std=c17",
                "-Wall",
                "-Wextra",
                "-O0",
                "-g",
                "-I",
                "${workspaceFolder}/include",
                "${workspaceFolder}/main.c",
                "${workspaceFolder}/src/caesar.c",
                "${workspaceFolder}/src/vigenere.c",
                "-o",
                "${workspaceFolder}/main.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run",
            "type": "shell",
            "command": ".\\main.exe",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": [
                "build"
            ]
        }
    ]
}